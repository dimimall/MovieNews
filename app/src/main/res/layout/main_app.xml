<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:background="#C3C3C3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:ci_drawable="@color/gold"
                app:ci_drawable_unselected="@color/blue"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                app:ci_height="10dp"
                app:ci_width="10dp" />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/mainMenuLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="0dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:background="@drawable/customborder"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/cat1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/movie_icon" />

                            <View
                                android:layout_width="80dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="0dp"
                                android:background="@color/white" />

                            <View
                                android:layout_width="55dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/cat1Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Popular movies"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/customborder"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/cat2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/movie_icon" />

                            <View
                                android:layout_width="80dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="0dp"
                                android:background="@color/white" />

                            <View
                                android:layout_width="55dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/cat2Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Upcoming movies"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:background="@drawable/customborder"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/cat3"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/movie_icon" />

                            <View
                                android:layout_width="80dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="0dp"
                                android:background="@color/white" />

                            <View
                                android:layout_width="55dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/cat3Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Highest movies"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/customborder"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/cat4"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/movie_icon" />

                            <View
                                android:layout_width="80dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="0dp"
                                android:background="@color/white" />

                            <View
                                android:layout_width="55dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/cat4Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Latest tv shows"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:background="@drawable/customborder"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/cat5"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/movie_icon" />

                            <View
                                android:layout_width="80dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="0dp"
                                android:background="@color/white" />

                            <View
                                android:layout_width="55dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/cat5Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Popular tv shows"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/customborder"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/cat6"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:padding="10dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/movie_icon" />

                            <View
                                android:layout_width="80dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="0dp"
                                android:background="@color/white" />

                            <View
                                android:layout_width="55dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/cat6Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Top rate tv shows"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:background="@drawable/customborder"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/cat7"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/movie_icon" />

                            <View
                                android:layout_width="80dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="0dp"
                                android:background="@color/white" />

                            <View
                                android:layout_width="55dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/cat7Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="Now playing movies"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/customborder"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/cat8"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/movie_icon" />

                            <View
                                android:layout_width="80dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="0dp"
                                android:background="@color/white" />

                            <View
                                android:layout_width="55dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/cat8Text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="People"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
